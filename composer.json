{
    "name": "oneclickdz/ocpay-php-sdk",
    "description": "Official PHP SDK for OneClickDz OCPay payment gateway",
    "version": "1.0.0",
    "type": "library",
    "keywords": [
        "oneclickdz",
        "ocpay",
        "payment",
        "gateway",
        "algeria",
        "dzd"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Dzairverse LTD",
            "email": "support@oneclickdz.com"
        }
    ],
    "require": {
        "php": "^8.1",
        "ext-json": "*",
        "ext-curl": "*",
        "guzzlehttp/guzzle": "^7.8"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "phpstan/phpstan": "^1.10",
        "squizlabs/php_codesniffer": "^3.7"
    },
    "autoload": {
        "psr-4": {
            "OneClickDz\\OCPay\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "OneClickDz\\OCPay\\Tests\\": "tests/"
        }
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "php-http/discovery": true
        }
    },
    "scripts": {
        "test": "phpunit",
        "cs-check": "phpcs --standard=PSR12 src/",
        "cs-fix": "phpcbf --standard=PSR12 src/",
        "stan": "phpstan analyse src/ --level=8"
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}

